<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="330.0" prefWidth="306.0" spacing="0.5" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TriviaGameController">
   <Label alignment="CENTER" prefHeight="51.0" prefWidth="305.0" text="Bs&quot;d Welcome to Trivia game!&#10;Please choose an answer" textAlignment="CENTER" textFill="#3aba80">
      <font>
         <Font name="Comic Sans MS Bold" size="13.0" />
      </font>
   </Label>
         <Label fx:id="question" alignment="CENTER" prefHeight="47.0" prefWidth="306.0" textAlignment="CENTER" wrapText="true">
      <font>
         <Font name="Comic Sans MS Bold" size="15.0" />
      </font>
      <padding>
         <Insets left="5.0" right="5.0" />
      </padding>
   </Label>
   <Separator prefHeight="23.0" prefWidth="210.0" />
         <RadioButton fx:id="option1" mnemonicParsing="false" onAction="#optionSelected" prefHeight="29.0" prefWidth="348.0" style="-fx-focus-traversable: false;">
      <font>
         <Font name="Comic Sans MS Bold" size="15.0" />
      </font>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
      <padding>
         <Insets left="15.0" />
      </padding>
   </RadioButton>
         <RadioButton fx:id="option2" mnemonicParsing="false" onAction="#optionSelected" prefHeight="29.0" prefWidth="359.0" style="-fx-focus-traversable: false;">
      <font>
         <Font name="Comic Sans MS Bold" size="15.0" />
      </font>
      <padding>
         <Insets left="15.0" />
      </padding>
   </RadioButton>
         <RadioButton fx:id="option3" mnemonicParsing="false" onAction="#optionSelected" prefHeight="29.0" prefWidth="314.0" style="-fx-focus-traversable: false;">
      <font>
         <Font name="Comic Sans MS Bold" size="15.0" />
      </font>
      <padding>
         <Insets left="15.0" />
      </padding>
   </RadioButton>
   <RadioButton fx:id="option4" layoutX="10.0" layoutY="70.0" mnemonicParsing="false" onAction="#optionSelected" prefHeight="29.0" prefWidth="329.0" style="-fx-focus-traversable: false;">
      <font>
         <Font name="Comic Sans MS Bold" size="15.0" />
      </font>
      <padding>
         <Insets left="15.0" />
      </padding>
   </RadioButton>
   <Label fx:id="message" alignment="CENTER" prefHeight="34.0" prefWidth="311.0" textAlignment="CENTER">
      <font>
         <Font name="Comic Sans MS" size="14.0" />
      </font>
   </Label>
   <AnchorPane>
      <Button fx:id="newQuestionButton" alignment="CENTER" contentDisplay="CENTER" layoutX="41.0" layoutY="-2.0" minWidth="53.0" mnemonicParsing="false" onAction="#newQuestion" prefHeight="33.0" prefWidth="97.0" style="-fx-focus-traversable: false;" text="new question" textAlignment="CENTER" visible="false">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" alignment="CENTER" contentDisplay="CENTER" layoutX="186.0" layoutY="-1.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="33.0" prefWidth="55.0" style="-fx-focus-traversable: false;" text="exit" textAlignment="CENTER" visible="false">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
      <Button fx:id="endGameButton" alignment="CENTER" contentDisplay="CENTER" layoutX="177.0" layoutY="-3.0" minWidth="53.0" mnemonicParsing="false" onAction="#endOfGame" prefHeight="33.0" prefWidth="73.0" style="-fx-focus-traversable: false;" text="end game" textAlignment="CENTER" visible="false">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
      <Button fx:id="newGameButton" alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="-1.0" mnemonicParsing="false" onAction="#newGame" prefHeight="33.0" prefWidth="79.0" style="-fx-focus-traversable: false;" text="new game" textAlignment="CENTER" visible="false">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
   </AnchorPane>
</VBox>
